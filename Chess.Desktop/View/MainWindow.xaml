<Window x:Class="Chess.Desktop.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Chess.Desktop"
        mc:Ignorable="d"
        Title="MainWindow" Height="750" Width="1100">
    <Grid>
        <ContentControl Name="boardContentControl">
            <Border HorizontalAlignment="Center" VerticalAlignment="Center" Width="500" Height="600" Background="Gray" Margin="20" CornerRadius="20">
                <StackPanel>
                    <TextBlock Text="Меню" HorizontalAlignment="Center" Margin="0 20 0 40" FontSize="25" FontWeight="Bold"/>
                    <Button Content="играть" Margin="40 10 30 10" FontSize="25"  Click="Button_Click_1"/>
                    <Button Content="рейтинговая игра" Margin="40 10 30 10" FontSize="25"  Click="Button_Click_1"/>
                    <Button Content="статистика" Margin="30 10 30 10" FontSize="25" />
                    <Button Content="локальный аккаунт" Margin="30 10 30 10" FontSize="25" Click="Button_Click"/>
                    <Button Content="настройки" Margin="30 10 30 10" FontSize="25" />
                </StackPanel>
            </Border>
        </ContentControl>
    </Grid>
</Window>
